@model BeOrganized.Data.Models.ApplicationUser;
@{
    this.ViewData["Title"] = "Edit User";
}
<section class="content-header">
    <h1>Edit User</h1>
    <ol class="breadcrumb">
        <li><a asp-area="Administration" asp-controller="Dashboard" asp-action="Index"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a asp-area="Administration" asp-controller="Users" asp-action="All"><i class="fa fa-dashboard"></i>All</a></li>
        <li class="active">Edit User</li>
    </ol>
</section>
<div class="content row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-userId="@TempData["UserId"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label" asp-for="@Model.UserName"></label>
                <input asp-for="@Model.UserName" class=" form-control " />
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.FullName" class="control-label"></label>
                <input asp-for="@Model.FullName" class="form-control" />
                <span asp-validation-for="@Model.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label"></label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PhoneNumber" class="control-label"></label>
                <input asp-for="@Model.PhoneNumber" class="form-control" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PhoneNumberConfirmed" class="control-label"></label>
                <input type="checkbox" asp-for="@Model.PhoneNumberConfirmed" class="checkbox" />
                <span asp-validation-for="@Model.PhoneNumberConfirmed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.EmailConfirmed" class="control-label"></label>
                <input type="checkbox" asp-for="@Model.EmailConfirmed" class="checkbox" />
                <span asp-validation-for="@Model.EmailConfirmed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.TwoFactorEnabled" class="control-label"></label>
                <input type="checkbox" asp-for="@Model.TwoFactorEnabled" class="checkbox" />
                <span asp-validation-for="@Model.TwoFactorEnabled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.IsDeleted" class="control-label"></label>
                <input type="checkbox" asp-for="@Model.IsDeleted" class="checkbox" />
                <span asp-validation-for="@Model.IsDeleted" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-lg" />
                <a class="btn btn-info btn-lg" asp-action="All">Cancel</a>
            </div>
        </form>
    </div>
</div>
