@model BeOrganized.Data.Models.Habit

<h3>Are you sure you want to delete this habit?</h3>
<div>
    <hr />
    <h4>@Model.Title</h4>
    @if (Model.StartDateTime.Date == Model.EndDateTime.Date)
    {
        <p>@Model.StartDateTime.ToString("dd MMMM HH:mm") - @Model.EndDateTime.ToString("HH:mm")</p>
    }
    else
    {
        <p>@Model.StartDateTime.ToString("dd MMMM HH:mm") - @Model.EndDateTime.ToString("dd MMMM HH:mm")</p>
    }

    <form method="post" >
        <input type="hidden" asp-for="Id" />
        <input asp-action="DeleteCurrent" asp-route-id="@Model.Id" type="submit" value="Delete Current" title="Delete this session only." class="btn btn-danger" /> |
        <input asp-action="DeleteFollowing" asp-route-id="@Model.Id" type="submit" value="Delete Following" title="Delete this and all following." class="btn btn-danger" /> <br />
        <a id="cancelDelete" class="btn btn-info">Cancel</a>
    </form>
</div>
